{
	"compilerOptions":
	{
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"skipLibCheck": true,
		"noEmit": true,
		"paths":
		{
			"@/*": ["./src/*"],
			"@locales/*": ["./src/locales/*"],
			"@assets/*": ["./src/assets/*"],
			"@views/*": ["./src/views/*"],
			"@scss/*": ["./src/scss/*"],
			"@stores/*": ["./src/stores/*"],
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	],
	"references": [
		{ "path": "./tsconfig.node.json" }
	]
}
